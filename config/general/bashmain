alias cp="cp -i"                          # confirm before overwriting something
alias rm="rm -i"                          # confirm before remove something
alias df='df -h'                          # human-readable sizes
alias free='free -m'                      # show sizes in MB
alias np='nano -w PKGBUILD'
alias more=less
alias vi=nvim
alias vim=nvim
alias cat=bat

source "$HOME/.cargo/env"

# >>> conda initialize >>>
 #!! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/etc/envs/py_env/bin/conda' 'shell.bash' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
	eval "$__conda_setup"
else
	if [ -f "/etc/envs/py_env/etc/profile.d/conda.sh" ]; then
		. "/etc/envs/py_env/etc/profile.d/conda.sh"
	else
		export PATH="/etc/envs/py_env/bin:$PATH"
	fi
fi
unset __conda_setup
conda activate py_calc
alias ipy_start="nohup jupyter notebook &"
# <<< conda initialize <<<

export EDITOR=nvim
export SVN_EDITOR=nvim

# C/C++ setting
export CC=gcc
export CXX=g++
export EIGENROOT="$HOME/.local/repo/eigen"
export PYBIND11="/etc/envs/py_env/envs/py_calc/lib/python3.8/site-packages/pybind11/include"

# Python setting
export HOMEREPO="$HOME/JoshuaTree"
export PYTHONPATH="$HOMEREPO/python/"
